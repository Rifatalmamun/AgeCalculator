    <LinearLayout
        android:id="@+id/currrentDateSectionLinearLayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/CurrentDateTextView_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Date: "

            android:textSize="25sp"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/currentDateShowLinearLayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp"
            android:background="@drawable/border">

            <EditText
                android:maxLength="2"
                android:id="@+id/CurrentDateDay_id"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:hint="dd"
                android:textStyle="bold"
                android:textSize="23sp"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:background="@null"
                android:inputType="number"/>
            <EditText
                android:maxLength="2"
                android:id="@+id/CurrentDateMonth_id"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:hint="mm"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="23sp"
                android:gravity="center_horizontal"
                android:background="@null"
                android:inputType="number"/>

            <EditText
                android:maxLength="4"
                android:id="@+id/CurrentDateYear_id"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="yyyy"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="23sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/CurrentDataCalender_id"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/calendericon" />
        </LinearLayout>

    </LinearLayout>




